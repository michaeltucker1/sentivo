{
  "name": "sentivo",
  "version": "1.0.16-alpha",
  "description": "",
  "main": "./dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"vite build --config vite.preload.config.ts --watch\" \"wait-on tcp:5173 && electron .\"",
    "build:dev": "vite build && vite build --config vite.preload.config.ts && tsc -p tsconfig.json && cp -r src/main/assets dist/main/",
    "build:prod": "node scripts/setup-notarization.js electron-builder --mac --universal",
    "clean": "rm -rf dist release",
    "build": "npm run clean && npm run build:dev && npm run build:prod",
    "postinstall": "electron-rebuild"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@tailwindcss/vite": "^4.1.14",
    "@untitledui/icons": "^0.0.19",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.4.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "googleapis": "^161.0.0",
    "keytar": "^7.9.0",
    "open": "^10.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "react-svg": "^16.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/dotenv": "^6.1.1",
    "@types/electron-store": "^1.3.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-svgr": "^4.5.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.sentivo.app",
    "productName": "Sentivo",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "src/main/assets",
        "to": "assets"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "mac": {
      "icon": "dist/main/assets/sentivo-icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "identity": "Michael Tucker (6W6LQXXMDB)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "michaeltucker1",
        "repo": "sentivo"
      }
    ]
  }
}
